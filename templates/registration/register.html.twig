{% extends 'base.html.twig' %}

{% block title %}{{ 'title.register'|trans }}{% endblock %}

{% block page_header %}
    <h1 class="h1 mb-5 fw-normal">{{ 'title.register'|trans }}</h1>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4"><i class="fa fa-lock" aria-hidden="true"></i> {{ 'title.register'|trans }}</h1>

            <div>
                {{ form_start(registrationForm, { attr: {novalidate: 'novalidate'}}) }}
                    {{ form_row(registrationForm.username, { label: 'form.label.email' }) }}
                    {{ form_row(registrationForm.name, { label: 'form.label.name' }) }}
                    {{ form_row(registrationForm.password.first, { label: 'form.label.password' }) }}
                    {{ form_row(registrationForm.password.second, { label: 'form.label.repeat_password' }) }}
                    {{ form_row(registrationForm.agreeTerms, { label: 'form.label.agree_terms_privacy' }) }}
                    <button type="submit" class="btn btn-outline-primary btn-lg">{{ 'action.register'|trans }}</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}