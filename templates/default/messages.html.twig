{% deprecated %}
{% extends 'base.html.twig' %}

{% block title %}Messages{% endblock %}

{% block body %}

    <h1 class="mb-4">Messages</h1>


    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-dismiss="alert" aria-label="{{ 'label.close'|trans }}"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {% if messages|length > 0%}
        <p>{{ messages|length }} messages here</p>

        <ol class="list-group list-group-numbered mt-3 mb-4">
            {% for message in messages %}
                <li class="list-group-item">{{ message }}</li>
            {% endfor %}
        </ol>

        {% form_theme form 'bootstrap_5_layout.html.twig' %}

        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        {{ form_widget(form) }}
            <button type="submit" name="submit" class="btn-outline-primary btn"><i class="bi bi-check-lg"></i> {{ 'action.do'|trans }}</button>
        {{ form_end(form) }}

    {% else %}
        <p>{{ messages|length }} messages here</p>
        <button type="submit" name="submit" class="btn-outline-success btn"><i class="bi bi-check-lg"></i> {{ 'action.ok'|trans }}</button>
    {% endif %}
{% endblock %}