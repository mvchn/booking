{% extends 'base.html.twig' %}

{% block title %}{{ 'title.slots'|trans }}{% endblock %}

{% block body %}

    <h1 class="mb-4">{{ 'title.slots'|trans }}</h1>
    <div class="row">
        <div class="col-md-12">
            {% if slots|length > 0 %}
                <table class="table">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
{#                        <th scope="col">Created</th>#}
                        <th scope="col">Title</th>
                        <th scope="col">Start At</th>
                        <th scope="col">Duration</th>
                        <th scope="col">Status</th>
                        <th scope="col">Type</th>
                        <th scope="col">Organizer</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for item in slots %}
                        <tr>
                            <th scope="row"><a href="{{ path('slots_show', { id: item.id }) }}">{{ item.id }}</a></th>
                            <td>
                                {{ item.title }}
                            </td>
                            <td>
                                {{ item.startAt|date }}
                            </td>
                            <td>
                                {{ item.duration }}
                            </td>
                            <td>
                                {{ item.status }}
                            </td>
                            <td>
                                {{ item.type }}
                            </td>
                            <td>
                                {{ item.owner }}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>{{ 'text.no_items_found'|trans }}</p>
            {% endif %}
        </div>
    </div>

{% endblock %}