{% extends 'base.html.twig' %}

{% block title %}{{ 'title.profile_edit'|trans }}{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1 class="mb-4"><i class="fa fa-lock" aria-hidden="true"></i> {{ 'title.profile_edit'|trans }}</h1>
            <div>
                {{ form_start(form, { attr: {novalidate: 'novalidate'}}) }}
                    {{ form_row(form.name, { label: 'label.name' }) }}
                    {{ form_row(form.email, { label: 'label.email' }) }}
                    {{ form_row(form.locale, { label: 'label.locale' }) }}
                    {{ form_row(form.timezone, { label: 'label.timezone' }) }}
                    {{ form_row(form.emoji, { label: 'label.emoji', help: 'help.book_color'}) }}
                    {{ form_row(form.status, { label: 'label.status', help: 'help.status'}) }}
                    <button type="submit" class="btn btn-outline-primary btn-lg">{{ 'submit.save'|trans }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}