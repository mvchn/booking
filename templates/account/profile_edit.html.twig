{% extends 'base.html.twig' %}

{% block title %}{{ 'app.title.profile_edit'|trans }}{% endblock %}

{% block body %}
    {{ form_start(form, { attr: {novalidate: 'novalidate'}}) }}
        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.locale) }}
        {{ form_row(form.timezone) }}
        <button type="submit" class="btn btn-outline-primary btn-lg">{{ 'button.action.save'|trans }}</button>
    {{ form_end(form) }}
{% endblock %}