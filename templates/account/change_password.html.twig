{% extends 'base.html.twig' %}

{% block title %}{{ 'app.title.password_change'|trans }}{% endblock %}

{% block body %}

    {{ form_start(form, { attr: {novalidate: 'novalidate'}}) }}
        {{ form_row(form.password.first, { label: 'form.password' }) }}
        {{ form_row(form.password.second, { label: 'form.repeat_password' }) }}
        <button type="submit" class="btn btn-outline-primary btn-lg">{{ 'button.action.save'|trans }}</button>
    {{ form_end(form) }}

{% endblock  %}