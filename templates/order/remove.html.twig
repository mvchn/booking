{% extends 'base.html.twig' %}

{% block title %}{{ 'title.remove'|trans }} #{{ order.id }}{% endblock %}

{% block body %}

    <h1 class="mb-4">{{ 'title.remove'|trans }} #{{ order.id }}</h1>
    <div class="row">
        <div class="col-md-12">
            <p>Do you really want remove order #{{ order.id }}?</p>
            <form action="{{ url('orders_remove', { id: order.id }) }}" method="post" data-confirmation="true" id="delete-form">
                <input type="hidden" name="token" value="{{ csrf_token('remove') }}" />
                <button type="submit" class="btn btn-outline-danger">
                    <i class="fa fa-trash" aria-hidden="true"></i>
                    {{ 'action.yes'|trans }}
                </button>
                <a href="{{ path('orders_show', { id: order.id }) }}" class="btn btn-outline-primary">{{ 'action.no'|trans }}</a>
            </form>

        </div>
    </div>

{% endblock %}