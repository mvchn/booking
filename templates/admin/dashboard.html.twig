{% extends '@EasyAdmin/welcome.html.twig' %}

{% block page_title 'Admin Dashboard' %}

{% block page_content %}

    {% if loans|length > 0 %}
    <table  class="table">
        <thead>
            <tr>
                <td>Name</td>
                <td>Email</td>
                <td>Date</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            {% for item in loans %}
            <tr>
                <td>{{ item.member.name }}</td>
                <td>{{ item.member.email }}</td>
                <td>{{ item.finishAt|date }}</td>
                <td><a href="{{ path('admin_loans_remind', {'id': item.id}) }}" class="btn btn-primary">Remind</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>No items</p>
    {% endif %}

{% endblock %}