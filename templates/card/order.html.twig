{% extends 'card/show.html.twig' %}

{% block body %}

<h1 class="mb-4">{{ 'title.order'|trans }}</h1>

{# Hint #}
<div class="row">
    <div class="col-md-12">
        {% if not app.user %}
            {# TODO: make complex translations in better way #}
            {{ 'message.you_can'|trans }} <a href="{{ path('login', { _locale: app.request.locale}) }}">{{ 'action.can_login'|trans }}</a> {{ 'message.or'|trans }}
            <a href="{{ path('register',{ _locale: app.request.locale}) }}">{{ 'action.can_register'|trans }}</a> {{ 'message.to_save_time'|trans }}.
        {% endif %}
    </div>
</div>

<div class="row mt-5">
    <div class="col-md-8">
        {% form_theme form 'bootstrap_5_horizontal_layout.html.twig' %}
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-body">
                <p><b>{{ card.title }}</b></p>
                <p>{{ card.description }}</p>
                <p>{{ card.author }}</p>
                <p>{{ card.year }}</p>
            </div>
        </div>
    </div>
</div>

{% endblock %}