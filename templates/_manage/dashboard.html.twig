<body>

<header class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
    {# TODO: maybe profile here #}
    <a class="navbar-brand col-md-3 col-lg-2 me-0 px-3" href="#">{{ app.user.userIdentifier }}</a>
    <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
{#    <input class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">#}
    <div class="navbar-nav">
        <div class="nav-item text-nowrap">
            <a class="nav-link px-3" href="{{ path('logout') }}">{{ 'action.logout'|trans }}</a>
        </div>
    </div>
</header>

<div class="container-fluid">
    <div class="row">
        <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="{{ path('manager_dashboard') }}">
                            <span data-feather="home"></span>
                            {{ 'manage.dashboard'|trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('manager_cards_list') }}">
                            <span data-feather="file"></span>
                            {{ 'manage.cards'|trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('manager_orders_list') }}">
                            <span data-feather="file"></span>
                            {{ 'manage.orders'|trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('manager_slots_list') }}">
                            <span data-feather="shopping-cart"></span>
                            {{ 'manage.events'|trans }}
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('manager_profiles_list') }}">
                            <span data-feather="profiles"></span>
                            {{ 'manage.profiles'|trans }}
                        </a>
                    </li>
                </ul>

                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>{{ 'manage.saved_reports'|trans }}</span>
                    <a class="link-secondary" href="#" aria-label="Add a new report">
                        <span data-feather="plus-circle"></span>
                    </a>
                </h6>
                <ul class="nav flex-column mb-2">
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <span data-feather="file-text"></span>
                            {{ 'manage.current_month'|trans }}
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                {% block h1 %}<h1 class="h2">{{ 'manage.dashboard'|trans }}</h1>{% endblock %}
                <div class="btn-toolbar mb-2 mb-md-0">
                    {% block list_export %}
                    {% endblock %}
                    <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle">
                        <span data-feather="calendar"></span>
                        {{ 'manage.this_week'|trans }}
                    </button>
                </div>
            </div>

{#            <canvas class="my-4 w-100" id="myChart" width="900" height="380"></canvas>#}

            <h2>{% block section_title %}{% endblock %}</h2>

            {% block body %}

            {% endblock %}

{#            <div class="table-responsive">#}
{#                <table class="table table-striped table-sm">#}
{#                </table>#}
{#            </div>#}
        </main>
    </div>
</div>

</body>
</html>