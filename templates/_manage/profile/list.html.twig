{% extends '_manage/default/index.html.twig' %}

{% block title %}{{ 'title.profiles'|trans }}{% endblock %}

{% block h1 %}Profiles List{% endblock %}

{% block section_title %}{{ 'title.profiles'|trans }}{% endblock %}



{% block table_thead %}
    {% if profiles|length > 0 %}
        <th scope="col">#</th>
        <th scope="col"></th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Status</th>
        <th scope="col">Locale</th>
        <th scope="col">Timezone</th>
        <th scope="col">Active</th>
        <th scope="col"></th>
    {% else %}
        <p>{{ 'text.no_items_found'|trans }}</p>
    {% endif %}
{% endblock %}

{% block table_tbody %}
    {% for item in profiles %}
        <tr>
            <th scope="row"><a href="{{ path('manager_profiles_show', { id: item.id }) }}">{{ item.id }}</a></th>
            <td>
                {{ item.emoji|trans({}, 'emoji')|raw }}
            </td>
            <td>
                <a href="{{ path('manager_profiles_show', { id: item.id }) }}">{{ item.name }}</a>
            </td>
            <td>
                {{ item.email }}
            </td>
            <td>
                <span class="badge bg-primary">{{ item.status }}</span>
            </td>
            <td>
                {{ item.locale }}
            </td>
            <td>
                {{ item.timezone }}
            </td>
            <td>
                {% if item.active %}
                    <i class="bi bi-check2-square"></i>
                {% else %}
                    <i class="bi bi-square"></i>
                {% endif %}
            </td>
            <td>
                <a title="Edit" href="{{ path('manager_profiles_edit', { id: item.id }) }}" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-pencil-square"></i></a>
                <a title="Open" href="{{ path('manager_profiles_show', { id: item.id }) }}" class="btn  btn-sm btn-outline-secondary">
                    <i class="bi bi-arrow-right-square"></i>
                </a>

{#                    <div class="btn-group btn-group-sm" role="group" aria-label="Basic mixed styles example">#}
{#                    #}
{#                    </div>#}
            </td>
        </tr>
    {% endfor %}
{% endblock %}