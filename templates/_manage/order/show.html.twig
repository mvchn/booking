{% extends '_manage/default/index.html.twig' %}

{% block title %}{{ 'title.order'|trans }} #{{ order.id }}{% endblock %}

{% block section_title %}{{ 'title.order'|trans }} #{{ order.id }}{% endblock %}

{% block body %}

    <p>Name: {{ order.name }}</p>
    <p>Email: {{ order.email }}</p>
    <p>Status: {{ order.status }}</p>
    <p>Options:</p>
    <ul>
    {% for option in order.options %}
        <li>{{ option }}</li>
    {% endfor %}
    </ul>

    <p>Cards:</p>
    <ul>
    {% for item in order.items %}
        <li><a href="#">{{ item.card.title }}</a></li>
    {% endfor %}
    </ul>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('manager_orders_remove', { id: order.id }) }}" class="btn btn-outline-danger">{{ 'action.remove'|trans }}</a>
    {% endif %}

{% endblock %}