{% extends '_manage/default/index.html.twig' %}

{% block title %}{{ 'title.card'|trans }} {% endblock %}

{% block section_title %}{{ 'title.card'|trans }}{% endblock %}

{% block body %}

    <p>{{ card.title }}</p>
    <p>{{ card.type }}</p>
    <p>{{ card.author }}</p>
    <p>{{ card.createdAt }}</p>
    <p>{{ card.year }}</p>
    <p>{{ card.publisher }}</p>
    <p>{{ card.publishing }}</p>
    <p>{{ card.isbn }}</p>
    <p>{{ card.description }}</p>

    {% if is_granted('ROLE_MANAGER') %}
        <a href="{{ path('manager_cards_edit', { id: card.id }) }}" class="btn btn-outline-primary">{{ 'action.edit'|trans }}</a>
    {% endif %}

    {% if is_granted('ROLE_ADMIN') %}
        <a href="#remove" class="btn btn-outline-danger">{{ 'action.remove'|trans }}</a>
    {% endif %}

{% endblock %}