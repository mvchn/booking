{% extends '_manage/dashboard.html.twig' %}

{% block list_export %}
    <div class="btn-group me-2">
        <button type="button" class="btn btn-sm btn-outline-secondary">{{ 'manage.share'|trans }}</button>
        <button type="button" class="btn btn-sm btn-outline-secondary">{{ 'manage.export'|trans }}</button>
    </div>
{% endblock %}

{% block title %}{{ controller_name }}{% endblock %}

{% block section_title %}{{ controller_name }}{% endblock %}

{% block body %}
    <table class="table table-striped table-sm table-hover">
        <thead>
            <tr>
                {% block table_thead %}{% endblock %}
            </tr>
        </thead>
        <tbody>
            <tr>
                {% block table_tbody %}{% endblock %}
            </tr>
        </tbody>
    </table>
{% endblock %}